{
  "name": "tmpcontainers",
  "version": "0.0.0",
  "description": "Temporary Containers",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "rm -rf tmpcontainer && npm run lint && npm test && npm run webpack && web-ext build --overwrite-dest --ignore-files src* test* package* webpack* && addons-linter web-ext-artifacts/temporary_containers-*.zip",
    "dev-webpack": "webpack --watch",
    "lint": "eslint src",
    "test": "nyc --reporter=html --reporter=text mocha ./test/setup.js test/*.test.js --timeout 10000",
    "test-watch": "mocha ./test/setup.js test/*.test.js --watch --tmp-debug",
    "webpack": "webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoically/firefox-add-on-temporary-containers.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stoically/firefox-add-on-temporary-containers/issues"
  },
  "homepage": "https://github.com/stoically/firefox-add-on-temporary-containers#readme",
  "devDependencies": {
    "addons-linter": "^0.29.0",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.3.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.11.0",
    "mocha": "^4.0.1",
    "nyc": "^11.4.1",
    "require-reload": "^0.2.2",
    "sinon": "^4.4.0",
    "sinon-chai": "^2.14.0",
    "web-ext": "^2.2.2",
    "webpack": "^3.10.0"
  },
  "private": true,
  "dependencies": {
    "delay": "^2.0.0",
    "emittery": "^0.2.0",
    "p-queue": "^2.3.0"
  },
  "nyc": {
    "exclude": [
      "test/**/*.js",
      "src/background/utils.js"
    ]
  }
}
