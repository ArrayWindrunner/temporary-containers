{
  "description": "Automatically open Tabs in new Temporary Containers",
  "manifest_version": 2,
  "name": "Temporary Containers",
  "version": "0.7",
  "homepage_url": "https://github.com/stoically/firefox-add-on-temporary-containers",
  "icons": {
    "48": "icons/tmpcontainer-48.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "Open Temporary Container",
    "default_icon": {
      "16": "icons/page-w-16.svg",
      "32": "icons/page-w-32.svg"
    },
    "theme_icons": [{
      "light": "icons/page-d-16.svg",
      "dark": "icons/page-w-16.svg",
      "size": 16
    }, {
      "light": "icons/page-d-32.svg",
      "dark": "icons/page-w-32.svg",
      "size": 32
    }]
  },

  "commands": {
    "open-temporary-container": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Open Temporary Container"
    }
},

  "permissions": [
    "<all_urls>",
    "contextualIdentities",
    "cookies",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["tmpcontainer.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "id": "{c607c8df-14a7-4f28-894f-29e8722976af}"
    }
  }
}
